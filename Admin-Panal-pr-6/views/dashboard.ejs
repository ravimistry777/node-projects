<%- include('header') %>

<!-- Dashboard Content -->
<div class="page-content py-4">
    <!-- Welcome Section -->
    <div class="d-flex justify-content-between align-items-end mb-5 fade-in-up">
        <div>
            <h2 class="fw-bold mb-1 text-dark" style="letter-spacing: -0.5px;">Dashboard</h2>
            <p class="mb-0 text-secondary">Overview of your system performance.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-glass d-flex align-items-center gap-2">
                <i class="bi bi-download"></i> Export
            </button>
            <button class="btn btn-primary d-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i> New Report
            </button>
        </div>
    </div>

    <!-- Hero Stats -->
    <div class="row g-4 mb-5">
        <div class="col-md-3 fade-in-up" style="animation-delay: 0.05s;">
            <div class="card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Total Admins</p>
                    <i class="bi bi-shield-lock text-muted fs-5"></i>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalAdmin %></h2>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <span class="badge bg-success-subtle text-success rounded-pill px-2 py-1" style="font-size: 0.75rem;">+2 new</span>
                    <span class="text-muted small">this month</span>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 fade-in-up" style="animation-delay: 0.1s;">
            <div class="card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Categories</p>
                    <i class="bi bi-grid text-muted fs-5"></i>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalCategory %></h2>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <span class="badge bg-secondary-subtle text-secondary rounded-pill px-2 py-1" style="font-size: 0.75rem;">0 changes</span>
                    <span class="text-muted small">this week</span>
                </div>
            </div>
        </div>

        <div class="col-md-3 fade-in-up" style="animation-delay: 0.15s;">
            <div class="card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Blog Posts</p>
                    <i class="bi bi-file-text text-muted fs-5"></i>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalBlog %></h2>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <span class="badge bg-success-subtle text-success rounded-pill px-2 py-1" style="font-size: 0.75rem;">+12%</span>
                    <span class="text-muted small">vs last month</span>
                </div>
            </div>
        </div>

        <div class="col-md-3 fade-in-up" style="animation-delay: 0.2s;">
            <div class="card h-100 p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Comments</p>
                    <i class="bi bi-chat-square-text text-muted fs-5"></i>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalComment %></h2>
                <div class="d-flex align-items-center gap-2 mt-2">
                    <span class="badge bg-warning-subtle text-warning-emphasis rounded-pill px-2 py-1" style="font-size: 0.75rem;">5 pending</span>
                    <span class="text-muted small">needs review</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Analytics Chart Section -->
        <div class="col-lg-8 fade-in-up" style="animation-delay: 0.3s;">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-dark">Traffic Overview</h6>
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-outline-secondary">Week</button>
                        <button type="button" class="btn btn-outline-secondary active">Month</button>
                        <button type="button" class="btn btn-outline-secondary">Year</button>
                    </div>
                </div>
                <div class="card-body">
                     <!-- Placeholder for Chart -->
                    <div class="d-flex align-items-center justify-content-center rounded-3 bg-light" 
                         style="height: 300px; border: 1px dashed var(--border-light);">
                        <div class="text-center">
                            <i class="bi bi-bar-chart fs-1 text-muted mb-2 d-block"></i>
                            <span class="text-muted small">Activity Visualization</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Tasks -->
        <div class="col-lg-4 fade-in-up" style="animation-delay: 0.4s;">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0 fw-bold text-dark">Quick Tasks</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item p-3 border-light d-flex gap-3 align-items-start">
                            <input class="form-check-input mt-1" type="checkbox" value="">
                            <div>
                                <label class="form-check-label fw-medium text-dark d-block">Review latest comments</label>
                                <small class="text-muted">Due by 5:00 PM</small>
                            </div>
                        </div>
                        <div class="list-group-item p-3 border-light d-flex gap-3 align-items-start">
                            <input class="form-check-input mt-1" type="checkbox" checked>
                            <div>
                                <label class="form-check-label fw-medium text-muted text-decoration-line-through d-block">Server maintenance</label>
                                <small class="text-muted">Completed 2 hrs ago</small>
                            </div>
                        </div>
                        <div class="list-group-item p-3 border-light d-flex gap-3 align-items-start">
                            <input class="form-check-input mt-1" type="checkbox" value="">
                            <div>
                                <label class="form-check-label fw-medium text-dark d-block">Update privacy policy</label>
                                <small class="text-muted">Due tomorrow</small>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-white border-top border-light p-3 text-center">
                    <a href="#" class="text-decoration-none small fw-medium text-primary">View All Tasks</a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>