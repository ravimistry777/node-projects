<%- include('header') %>

<!-- Dashboard Content -->
<div class="page-content py-4">
    <!-- Welcome Section -->
    <div class="d-flex justify-content-between align-items-end mb-5 fade-in-up">
        <div>
            <h2 class="fw-bold mb-1 text-dark" style="letter-spacing: -0.5px;">Dashboard</h2>
            <p class="mb-0 text-secondary">Overview of your inventory system.</p>
        </div>
        <div class="d-flex gap-2">
            <a href="/product/add-product" class="btn btn-primary d-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i> Add Product
            </a>
        </div>
    </div>

    <!-- Hero Stats -->
    <div class="row g-4 mb-5">
        <!-- Products -->
        <div class="col-md-3 fade-in-up" style="animation-delay: 0.05s;">
            <div class="card h-100 p-4 border-0 shadow-sm">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Total Products</p>
                    <div class="p-2 bg-primary-subtle rounded text-primary">
                        <i class="bi bi-box-seam fs-5"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalProduct %></h2>
                <small class="text-muted">Items in inventory</small>
            </div>
        </div>

        <!-- Categories -->
        <div class="col-md-3 fade-in-up" style="animation-delay: 0.1s;">
            <div class="card h-100 p-4 border-0 shadow-sm">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Main Categories</p>
                    <div class="p-2 bg-success-subtle rounded text-success">
                        <i class="bi bi-tags fs-5"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalCategory %></h2>
                <small class="text-muted">Top-level categories</small>
            </div>
        </div>

        <!-- Sub Categories -->
        <div class="col-md-3 fade-in-up" style="animation-delay: 0.15s;">
            <div class="card h-100 p-4 border-0 shadow-sm">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Sub Categories</p>
                    <div class="p-2 bg-info-subtle rounded text-info">
                        <i class="bi bi-tag fs-5"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalSubCategory %></h2>
                <small class="text-muted">Second-level categories</small>
            </div>
        </div>

        <!-- Extra Categories -->
        <div class="col-md-3 fade-in-up" style="animation-delay: 0.2s;">
            <div class="card h-100 p-4 border-0 shadow-sm">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <p class="mb-0 text-muted fw-semibold text-uppercase" style="font-size: 0.75rem; letter-spacing: 0.05em;">Extra Categories</p>
                    <div class="p-2 bg-warning-subtle rounded text-warning">
                        <i class="bi bi-bookmarks fs-5"></i>
                    </div>
                </div>
                <h2 class="fw-bold mb-1 text-dark"><%= totalExtraCategory %></h2>
                <small class="text-muted">Third-level categories</small>
            </div>
        </div>
    </div>

    <!-- Recent Products Table -->
    <div class="row fade-in-up" style="animation-delay: 0.3s;">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                    <h6 class="mb-0 fw-bold text-dark">Recently Added Products</h6>
                    <a href="/product/view-products" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0 ps-4">Product</th>
                                <th class="border-0">Category</th>
                                <th class="border-0">Price</th>
                                <th class="border-0">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (recentProducts && recentProducts.length > 0) { %>
                                <% recentProducts.forEach(product => { %>
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="rounded overflow-hidden me-3" style="width: 40px; height: 40px;">
                                                <img src="<%= product.productImage %>" alt="Product" class="w-100 h-100 object-fit-cover">
                                            </div>
                                            <div>
                                                <h6 class="mb-0 text-dark small fw-bold"><%= product.productName %></h6>
                                                <small class="text-muted" style="font-size: 0.75rem;">Added <%= new Date(product.createdAt).toLocaleDateString() %></small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="badge bg-light text-secondary border fw-normal mb-1">
                                                <%= product.categoryId ? product.categoryId.categoryName : 'N/A' %>
                                            </span>
                                            <% if (product.subCategoryId) { %>
                                                <small class="text-muted" style="font-size: 0.7rem;"><%= product.subCategoryId.subCategoryName %></small>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="fw-bold text-dark">â‚¹<%= product.productPrice %></td>
                                    <td>
                                        <% if(product.status) { %>
                                            <span class="badge bg-success-subtle text-success rounded-pill">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-danger-subtle text-danger rounded-pill">Inactive</span>
                                        <% } %>
                                    </td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">No products found.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
