<%- include('../header') %>

<div class="page-content py-4">
    <!-- Header & Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4 fade-in-up">
        <div>
            <h2 class="fw-bold mb-1 text-dark" style="letter-spacing: -0.5px;">Admins</h2>
            <p class="mb-0 text-secondary">Manage access and permissions.</p>
        </div>
        <a href="/admin/add-admin" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
            <i class="bi bi-plus-lg"></i>
            <span>Add Admin</span>
        </a>
    </div>

    <!-- Data Table Section -->
    <div class="card fade-in-up" style="animation-delay: 0.1s;">
        <!-- Table Header -->
        <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-glass active">All</button>
                <button class="btn btn-sm btn-glass">Active</button>
            </div>
            <form method="get" action="/admin/view-admins" class="d-flex gap-2">
                <div class="search-box" style="width: 250px;">
                    <i class="bi bi-search position-absolute text-muted" style="top: 50%; transform: translateY(-50%); left: 12px; font-size: 0.85rem;"></i>
                    <input type="text" name="search" class="form-control form-control-sm ps-4" placeholder="Search..." value="<%= query?.search || '' %>" style="padding-left: 35px !important;">
                </div>
            </form>
        </div>

        <!-- Table Content -->
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4" style="width: 50px;">#</th>
                        <th>User</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% admins.map((v, i) => { %>
                    <tr>
                        <td class="ps-4 text-muted"><%= ++i %></td>
                        <td>
                            <div class="d-flex align-items-center gap-3">
                                <img src="<%= v.profileImage %>" alt="admin" class="rounded-circle border" width="36" height="36" style="object-fit: cover;">
                                <div>
                                    <div class="fw-medium text-dark"><%= v.firstname %> <%= v.lastname %></div>
                                    <div class="small text-muted"><%= v.gender %></div>
                                </div>
                            </div>
                        </td>
                        <td class="text-secondary"><%= v.email %></td>
                        <td>
                            <span class="badge bg-secondary-subtle text-secondary rounded-pill fw-normal border border-secondary-subtle px-2">Admin</span>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <span class="d-inline-block rounded-circle bg-success" style="width: 6px; height: 6px;"></span>
                                <span class="text-success small fw-medium">Active</span>
                            </div>
                        </td>
                        <td class="pe-4 text-end">
                            <div class="d-flex justify-content-end gap-1">
                                <a href="/admin/edit-admin/<%= v.id %>" class="btn btn-sm btn-glass text-secondary border-0" data-bs-toggle="tooltip" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/admin/delete-admin/<%= v.id %>" class="btn btn-sm btn-glass text-secondary border-0" data-bs-toggle="tooltip" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                    
                    <% if (admins.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="d-flex flex-column align-items-center justify-content-center">
                                <div class="bg-light rounded-circle p-3 mb-3">
                                    <i class="bi bi-person text-muted fs-4"></i>
                                </div>
                                <h6 class="text-dark mb-1">No admins found</h6>
                                <p class="text-muted small mb-0">Get started by adding a new administrator.</p>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <!-- Table Footer -->
        <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
             <small class="text-muted">Showing <%= admins.length %> results</small>
             <nav>
                <ul class="pagination pagination-sm mb-0 gap-1">
                    <li class="page-item disabled"><a class="page-link border-0 text-muted bg-transparent" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link rounded-2 border-0 bg-dark text-white" href="#">1</a></li>
                    <li class="page-item"><a class="page-link border-0 text-muted bg-transparent" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<%- include('../footer') %>