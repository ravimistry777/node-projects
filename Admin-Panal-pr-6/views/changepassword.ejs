<%- include('header') %>

<div class="py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card border-0 shadow-sm fade-in-up">
                <div class="card-body p-5">
                    
                    <div class="text-center mb-5">
                        <div class="d-inline-flex align-items-center justify-content-center bg-dark text-white rounded-circle mb-3" style="width: 56px; height: 56px;">
                            <i class="bi bi-shield-lock-fill fs-4"></i>
                        </div>
                        <h3 class="fw-bold text-main mb-1">Change Password</h3>
                        <p class="text-secondary mb-0">Secure your account with a strong password</p>
                    </div>

                    <form method="post" action="/change-password">

                        <div class="mb-4">
                            <label class="form-label small fw-medium text-secondary">Current Password</label>
                            <input type="password" class="form-control bg-light border-0" name="oldPass" required style="padding: 12px;">
                        </div>

                        <div class="mb-4">
                            <label class="form-label small fw-medium text-secondary">New Password</label>
                            <input type="password" class="form-control bg-light border-0" name="newPassword" required style="padding: 12px;">
                        </div>

                        <div class="mb-5">
                            <label class="form-label small fw-medium text-secondary">Confirm New Password</label>
                            <input type="password" class="form-control bg-light border-0" name="confirmPassword" required style="padding: 12px;">
                        </div>

                        <button type="submit" class="btn btn-dark w-100 py-3 fw-medium">
                            Update Password
                        </button>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>
