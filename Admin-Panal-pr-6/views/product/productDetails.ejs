<%- include('../header') %>

<div class="container-fluid pt-4 px-4">
    <div class="bg-white rounded p-4 border shadow-sm">
        <div class="mb-4">
            <a href="/product/view-products" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i> Back to Products
            </a>
        </div>
        
        <div class="row g-5">
            <!-- Product Image Section -->
            <div class="col-md-5">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="border rounded p-2 mb-3 bg-light">
                        <% if(product.productImage) { %>
                            <img src="<%= product.productImage %>" class="img-fluid rounded w-100 object-fit-contain" style="max-height: 500px;" alt="<%= product.productName %>">
                        <% } else { %>
                            <div class="d-flex align-items-center justify-content-center bg-white rounded" style="height: 400px;">
                                <i class="bi bi-image text-muted fs-1"></i>
                            </div>
                        <% } %>
                    </div>
                    
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="/product/update-product/<%= product.id %>" class="btn btn-outline-primary flex-grow-1">
                            <i class="bi bi-pencil me-1"></i> Edit Product
                        </a>
                        <a href="/product/delete-product/<%= product.id %>" onclick="return confirm('Are you sure you want to delete this product?')" class="btn btn-outline-danger flex-grow-1">
                            <i class="bi bi-trash me-1"></i> Delete Product
                        </a>
                    </div>
                </div>
            </div>

            <!-- Product Details Section -->
            <div class="col-md-7">
                <div class="ps-md-4">
                    <!-- Breadcrumbs / Categories -->
                    <nav aria-label="breadcrumb" class="mb-3">
                        <ol class="breadcrumb small text-uppercase fw-semibold text-muted">
                            <li class="breadcrumb-item"><%= product.categoryId ? product.categoryId.categoryName : 'Uncategorized' %></li>
                            <% if(product.subCategoryId) { %>
                                <li class="breadcrumb-item"><%= product.subCategoryId.subCategoryName %></li>
                            <% } %>
                            <% if(product.extraCategoryId) { %>
                                <li class="breadcrumb-item active" aria-current="page"><%= product.extraCategoryId.extraCategoryName %></li>
                            <% } %>
                        </ol>
                    </nav>

                    <h1 class="display-6 fw-bold text-dark mb-2"><%= product.productName %></h1>
                    
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <h2 class="h3 fw-bold text-primary mb-0">â‚¹<%= product.productPrice.toLocaleString('en-IN') %></h2>
                        <% if(product.productStock > 0) { %>
                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-3 py-2 rounded-pill">In Stock (<%= product.productStock %> left)</span>
                        <% } else { %>
                            <span class="badge bg-danger bg-opacity-10 text-danger border border-danger px-3 py-2 rounded-pill">Out of Stock</span>
                        <% } %>
                    </div>

                    <!-- Size Chart -->
                    <% if(product.productSize && product.productSize.length > 0) { %>
                        <div class="mb-4">
                            <h6 class="fw-bold mb-2 text-dark">Available Sizes</h6>
                            <div class="d-flex gap-2">
                                <% product.productSize.forEach(size => { %>
                                    <div class="border rounded-circle d-flex align-items-center justify-content-center fw-medium text-dark bg-white shadow-sm" style="width: 40px; height: 40px; border-color: #dee2e6 !important;">
                                        <%= size %>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    <% } %>

                    <div class="border-top border-bottom py-4 my-4">
                        <h5 class="fw-bold mb-3">Product Description</h5>
                        <p class="text-secondary lh-lg mb-0" style="white-space: pre-line;"><%= product.productDescription %></p>
                    </div>

                    <!-- Additional Details Table -->
                    <div class="bg-light rounded p-4">
                        <h6 class="fw-bold mb-3">Product Specifications</h6>
                        <table class="table table-borderless table-sm mb-0">
                            <tbody>
                                <tr>
                                    <td class="text-muted w-25">Category</td>
                                    <td class="fw-medium"><%= product.categoryId ? product.categoryId.categoryName : 'N/A' %></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Sub Category</td>
                                    <td class="fw-medium"><%= product.subCategoryId ? product.subCategoryId.subCategoryName : 'N/A' %></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Stock Status</td>
                                    <td class="fw-medium">
                                        <% if(product.productStock > 10) { %>
                                            <span class="text-success">In Stock</span>
                                        <% } else if(product.productStock > 0) { %>
                                            <span class="text-warning">Low Stock</span>
                                        <% } else { %>
                                            <span class="text-danger">Out of Stock</span>
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Added On</td>
                                    <td class="fw-medium"><%= new Date(product.createdAt).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }) %></td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Last Updated</td>
                                    <td class="fw-medium"><%= new Date(product.updatedAt).toLocaleDateString('en-IN', { day: 'numeric', month: 'long', year: 'numeric' }) %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../footer') %>
