<%- include('../header') %>

<div class="page-content py-4">
    <!-- Header & Actions -->
    <div class="d-flex justify-content-between align-items-center mb-4 fade-in-up">
        <div>
            <h2 class="fw-bold mb-1 text-dark" style="letter-spacing: -0.5px;">Sub Categories</h2>
            <p class="mb-0 text-secondary">Manage sub categories within main categories.</p>
        </div>
        <a href="/subcategory/add-subcategory" class="btn btn-primary d-flex align-items-center gap-2 shadow-sm">
            <i class="bi bi-plus-lg"></i>
            <span>Add Sub Category</span>
        </a>
    </div>

    <!-- Data Table Section -->
    <div class="card fade-in-up" style="animation-delay: 0.1s;">
        <!-- Table Header -->
        <div class="card-header d-flex justify-content-between align-items-center bg-white py-3">
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-glass active">All</button>
                <button class="btn btn-sm btn-glass">Active</button>
            </div>
            <div class="d-flex gap-2">
                <form method="get" action="/subcategory/view-subcategories" class="d-flex gap-2">
                    <div class="search-box" style="width: 250px;">
                        <i class="bi bi-search position-absolute text-muted" style="top: 50%; transform: translateY(-50%); left: 12px; font-size: 0.85rem;"></i>
                        <input type="text" name="search" class="form-control form-control-sm ps-4" placeholder="Search..." value="<%= query?.search || '' %>" style="padding-left: 35px !important;">
                    </div>
                </form>
                <button class="btn btn-sm btn-glass text-secondary border" type="button" data-bs-toggle="collapse" data-bs-target="#filterSection" aria-expanded="false" aria-controls="filterSection">
                    <i class="bi bi-funnel"></i>
                </button>
            </div>
        </div>

        <!-- Filter Section (Collapsible) -->
        <div class="collapse bg-light border-bottom" id="filterSection">
            <div class="p-3">
                <form action="/subcategory/view-subcategories" method="get">
                    <div class="row g-2 align-items-center">
                        <div class="col-md-4">
                            <select class="form-select form-select-sm" name="categoryId">
                                <option value="">-- All Main Categories --</option>
                                <% categories.map((cat) => { %>
                                    <option value="<%= cat.id %>" <%= query.categoryId === cat.id ? 'selected' : '' %>><%= cat.categoryName %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex gap-2">
                            <button type="submit" class="btn btn-sm btn-primary flex-grow-1">
                                <i class="bi bi-filter"></i> Apply
                            </button>
                            <a href="/subcategory/view-subcategories" class="btn btn-sm btn-outline-secondary d-flex align-items-center gap-2" data-bs-toggle="tooltip" title="Reset Filters">
                                <i class="bi bi-arrow-counterclockwise"></i>
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Table Content -->
        <div class="table-responsive">
            <table class="table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4" style="width: 50px;">#</th>
                        <th>Sub Category</th>
                        <th>Main Category</th>
                        <th>Description</th>
                        <th>Status</th>
                        <th class="pe-4 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% subCategories.map((v, i) => { %>
                    <tr>
                        <td class="ps-4 text-muted"><%= ++i %></td>
                        <td>
                            <div class="fw-medium text-dark"><%= v.subCategoryName %></div>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <% if(v.categoryId && v.categoryId.categoryImage) { %>
                                    <img src="<%= v.categoryId.categoryImage %>" alt="cat-img" class="rounded border" width="50" height="50" style="object-fit: cover;">
                                <% } %>
                                <span class="badge bg-light text-dark border fw-medium px-2">
                                    <%= v.categoryId ? v.categoryId.categoryName : 'Unknown' %>
                                </span>
                            </div>
                        </td>
                        <td class="text-secondary" style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            <%= v.description %>
                        </td>
                        <td>
                            <div class="d-flex align-items-center gap-2">
                                <span class="d-inline-block rounded-circle bg-success" style="width: 6px; height: 6px;"></span>
                                <span class="text-success small fw-medium">Active</span>
                            </div>
                        </td>
                        <td class="pe-4 text-end">
                            <div class="d-flex justify-content-end gap-1">
                                <a href="/subcategory/edit-subcategory/<%= v.id %>" class="btn btn-sm btn-glass text-secondary border-0" data-bs-toggle="tooltip" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/subcategory/delete-subcategory/<%= v.id %>" onclick="return confirm('Are you sure you want to delete this Sub Category?')" class="btn btn-sm btn-glass text-secondary border-0" data-bs-toggle="tooltip" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% }) %>
                    
                    <% if (subCategories.length === 0) { %>
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="d-flex flex-column align-items-center justify-content-center">
                                <div class="bg-light rounded-circle p-3 mb-3">
                                    <i class="bi bi-diagram-2 text-muted fs-4"></i>
                                </div>
                                <h6 class="text-dark mb-1">No sub categories found</h6>
                                <p class="text-muted small mb-0">Get started by adding a new sub category.</p>
                            </div>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        
        <!-- Table Footer -->
        <div class="card-footer bg-white d-flex justify-content-between align-items-center py-3">
             <small class="text-muted">Showing <%= subCategories.length %> results</small>
             <nav>
                <ul class="pagination pagination-sm mb-0 gap-1">
                    <li class="page-item disabled"><a class="page-link border-0 text-muted bg-transparent" href="#">Previous</a></li>
                    <li class="page-item active"><a class="page-link rounded-2 border-0 bg-dark text-white" href="#">1</a></li>
                    <li class="page-item"><a class="page-link border-0 text-muted bg-transparent" href="#">Next</a></li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<%- include('../footer') %>
