  <!-- Toast Notification -->
  <div class="toast-notification toast-success" id="successToast">
    <div class="toast-icon">
      <i class="bi bi-check-circle-fill"></i>
    </div>
    <div class="toast-content">
      <div class="toast-title">Success!</div>
      <div class="toast-message" id="toastMessage">Book added successfully.</div>
    </div>
    <button class="toast-close" onclick="hideToast()">
      <i class="bi bi-x"></i>
    </button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Book ID Generator
    function generateBookId() {
      const prefix = 'BOOK';
      const timestamp = Date.now().toString(36).toUpperCase();
      const random = Math.random().toString(36).substr(2, 5).toUpperCase();
      return `${prefix}-${timestamp}-${random}`;
    }

    // Update preview functions
    function updateBookCover() {
      const input = document.getElementById('bookImage');
      const preview = document.getElementById('liveBookCoverPreview');
      const placeholder = document.getElementById('imagePlaceholder');
      const previewText = document.getElementById('previewText');

      if (input.value) {
        try {
          const url = new URL(input.value);
          preview.src = url.toString();
          preview.style.display = 'block';
          placeholder.style.display = 'none';
          previewText.textContent = 'Live Preview';
        } catch (_) {
          showImagePlaceholder();
        }
      } else {
        showImagePlaceholder();
      }
    }

    function showImagePlaceholder() {
      const preview = document.getElementById('liveBookCoverPreview');
      const placeholder = document.getElementById('imagePlaceholder');
      const previewText = document.getElementById('previewText');

      preview.style.display = 'none';
      placeholder.style.display = 'flex';
      previewText.textContent = 'Enter a valid image URL to see preview';
    }

    // Form validation
    document.getElementById('addBookForm').addEventListener('submit', function (e) {
      e.preventDefault();

      const title = document.getElementById('title').value.trim();
      const author = document.getElementById('author').value.trim();
      const category = document.getElementById('category').value;
      const price = document.getElementById('price').value;
      const imageUrl = document.getElementById('bookImage').value.trim();

      let isValid = true;
      let errorMessage = '';

      // Validate required fields
      if (!title) {
        isValid = false;
        document.getElementById('title').style.borderColor = '#ef4444';
        errorMessage = 'Book title is required.';
      }

      if (!author) {
        isValid = false;
        document.getElementById('author').style.borderColor = '#ef4444';
        errorMessage = 'Author name is required.';
      }

      if (!category) {
        isValid = false;
        document.getElementById('category').style.borderColor = '#ef4444';
        errorMessage = 'Please select a category.';
      }

      if (!price || parseFloat(price) < 0) {
        isValid = false;
        document.getElementById('price').style.borderColor = '#ef4444';
        errorMessage = 'Please enter a valid price.';
      }

      if (!imageUrl) {
        isValid = false;
        document.getElementById('bookImage').style.borderColor = '#ef4444';
        errorMessage = 'Image URL is required.';
      } else {
        // Validate URL format
        try {
          new URL(imageUrl);
        } catch (_) {
          isValid = false;
          document.getElementById('bookImage').style.borderColor = '#ef4444';
          errorMessage = 'Please enter a valid image URL.';
        }
      }

      if (!isValid) {
        showToast(errorMessage, 'error');
        return;
      }

      // Generate and display book ID
      const bookId = generateBookId();
      const bookIdDisplay = document.getElementById('bookIdDisplay');
      bookIdDisplay.innerHTML = `<i class="bi bi-hash"></i><span>Book ID: ${bookId}</span>`;

      // Update progress steps
      const stepIcons = document.querySelectorAll('.step-icon');
      const stepLabels = document.querySelectorAll('.step-label');

      stepIcons[1].classList.add('active');
      stepLabels[1].classList.add('active');

      // Show success message
      showToast('Book details validated successfully! Submitting...', 'success');

      // Submit form after delay
      setTimeout(() => {
        stepIcons[2].classList.add('active');
        stepLabels[2].classList.add('active');
        this.submit();
      }, 1500);
    });

    // Real-time validation
    const inputs = document.querySelectorAll('input[required], select[required]');
    inputs.forEach(input => {
      input.addEventListener('input', function () {
        if (this.value.trim()) {
          this.style.borderColor = '';
        }
      });

      input.addEventListener('blur', function () {
        if (this.type === 'url' && this.value.trim()) {
          try {
            new URL(this.value.trim());
            this.style.borderColor = '#10b981';
          } catch (_) {
            this.style.borderColor = '#ef4444';
          }
        }
      });
    });

    // Price formatting
    document.getElementById('price').addEventListener('blur', function (e) {
      const value = parseFloat(e.target.value);
      if (!isNaN(value) && value >= 0) {
        e.target.value = value.toFixed(2);
      }
    });

    // Toast notification functions
    function showToast(message, type = 'success') {
      const toast = document.getElementById('successToast');
      const messageElement = document.getElementById('toastMessage');
      const icon = toast.querySelector('.toast-icon i');

      messageElement.textContent = message;

      if (type === 'error') {
        toast.classList.remove('toast-success');
        toast.classList.add('toast-error');
        icon.className = 'bi bi-exclamation-triangle-fill';
        icon.parentElement.style.background = 'linear-gradient(135deg, rgba(239, 68, 68, 0.2), rgba(220, 38, 38, 0.2))';
        icon.parentElement.style.color = '#ef4444';
      } else {
        toast.classList.remove('toast-error');
        toast.classList.add('toast-success');
        icon.className = 'bi bi-check-circle-fill';
        icon.parentElement.style.background = 'linear-gradient(135deg, rgba(34, 197, 94, 0.2), rgba(21, 128, 61, 0.2))';
        icon.parentElement.style.color = '#10b981';
      }

      toast.classList.add('show');

      setTimeout(() => {
        hideToast();
      }, 5000);
    }

    function hideToast() {
      const toast = document.getElementById('successToast');
      toast.classList.remove('show');
    }

    // URL parameters handling for success messages
    document.addEventListener('DOMContentLoaded', function () {
      const urlParams = new URLSearchParams(window.location.search);
      const success = urlParams.get('success');
      const message = urlParams.get('message');

      if (success === 'true' && message) {
        showToast(message);
        // Clean URL
        window.history.replaceState({}, document.title, window.location.pathname);
      }

      // Auto-focus on first input
      document.getElementById('title').focus();

      // Initialize preview
      updateBookCover();
    });

    // Auto-generate suggestions
    const bookExamples = [
      { title: "The Alchemist", author: "Paulo Coelho", category: "Fiction", price: "399.99" },
      { title: "Atomic Habits", author: "James Clear", category: "Self-Help", price: "499.99" },
      { title: "The Lean Startup", author: "Eric Ries", category: "Business", price: "599.99" },
      { title: "Sapiens", author: "Yuval Noah Harari", category: "History", price: "699.99" },
      { title: "The Silent Patient", author: "Alex Michaelides", category: "Mystery", price: "349.99" }
    ];

    // Add example selection
    const titleInput = document.getElementById('title');
    titleInput.addEventListener('focus', function () {
      if (!this.value) {
        this.setAttribute('placeholder', 'Type or select from suggestions...');
      }
    });

    // Category auto-complete
    const categorySelect = document.getElementById('category');
    categorySelect.addEventListener('focus', function () {
      this.size = 6;
    });

    categorySelect.addEventListener('blur', function () {
      this.size = 1;
    });

    categorySelect.addEventListener('change', function () {
      this.size = 1;
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', function (e) {
      if (e.ctrlKey && e.key === 's') {
        e.preventDefault();
        document.querySelector('.btn-submit').click();
      }

      // Escape to cancel
      if (e.key === 'Escape') {
        window.location.href = '/';
      }
    });

    titleInput.addEventListener('input', function (e) {
      const value = e.target.value.toLowerCase();
      if (value.length > 2) {
        const match = bookExamples.find(book =>
          book.title.toLowerCase().includes(value) ||
          book.author.toLowerCase().includes(value)
        );

        if (match) {
          console.log('Suggestion:', match);
        }
      }
    });
    let autoSaveTimer;
    const formInputs = document.querySelectorAll('#addBookForm input, #addBookForm select');

    formInputs.forEach(input => {
      input.addEventListener('input', function () {
        clearTimeout(autoSaveTimer);
        autoSaveTimer = setTimeout(() => {
          console.log('Auto-save triggered');
        }, 2000);
      });
    });
  </script>
