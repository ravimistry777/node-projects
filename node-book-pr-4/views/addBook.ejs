                  <!-- Book Image URL -->
                  <div class="col-12 mb-4 form-group">
                    <label class="form-label" for="bookImage">
                      <i class="bi bi-image-fill"></i>Cover Image URL
                    </label>
                    <div class="input-group">
                      <input type="url" name="bookImage" id="bookImage" class="form-control"
                        placeholder="https://example.com/book-cover.jpg" required oninput="updateBookCover()"
                        autocomplete="off">
                    </div>
                    <div class="form-text">
                      <i class="bi bi-info-circle"></i>
                      Enter a valid URL for the book cover image
                    </div>

                    <!-- Image Preview -->
                    <div class="preview-container mt-3">
                      <div class="preview-placeholder" id="imagePlaceholder">
                        <i class="bi bi-image"></i>
                      </div>
                      <img src="" class="preview-image" alt="Book Cover Preview" id="liveBookCoverPreview"
                        onerror="showImagePlaceholder()">
                      <p class="text-secondary small mb-0 mt-2" id="previewText">
                        Preview will appear here when you enter a valid image URL
                      </p>
                    </div>
                  </div>

                  <!-- Generated Book ID -->
                  <div class="col-12 mt-2">
                    <div class="generated-id" id="bookIdDisplay">
                      <i class="bi bi-hash"></i>
                      <span>Book ID will be generated upon submission</span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Form Actions -->
              <div class="form-actions">
                <div class="row g-3">
                  <div class="col-md-8">
                    <button type="submit" class="btn-submit">
                      <i class="bi bi-plus-circle"></i>
                      Add Book to Collection
                    </button>
                  </div>
                  <div class="col-md-4">
                    <a href="/" class="btn-cancel">
                      <i class="bi bi-arrow-left"></i>
                      Back to Dashboard
                    </a>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
