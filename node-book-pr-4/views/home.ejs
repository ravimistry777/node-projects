                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (books.length> 0) { %>
                <% books.forEach((book, index)=> { %>
                  <tr class="book-row" data-title="<%= book.title.toLowerCase() %>"
                    data-author="<%= book.author.toLowerCase() %>" data-category="<%= book.category.toLowerCase() %>">
                    <td>
                      <span class="text-secondary fw-bold">#<%= (index + 1).toString().padStart(2, '0' ) %></span>
                    </td>
                    <td>
                      <img src="<%= book.bookImage %>" class="book-cover" alt="<%= book.title %>"
                        onerror="this.src='https://images.unsplash.com/photo-1544716278-ca5e3f4abd8c?w=150&h=220&fit=crop&q=80'">
                    </td>
                    <td>
                      <div class="book-details">
                        <div class="book-title">
                          <%= book.title %>
                        </div>
                        <div class="book-reference">ISBN: <%= book.id.toString().slice(-8) %>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="text-white-50">
                        <%= book.author %>
                      </span>
                    </td>
                    <td>
                      <span class="category-tag">
                        <%= book.category %>
